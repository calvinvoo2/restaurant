{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unreachable": "error",
    "no-console": ["warn"],
    "no-unused-vars": [
      1,
      { "vars": "local", "args": "after-used", "argsIgnorePattern": "^_" }
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "plugins": ["react"]
}
